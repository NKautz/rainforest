<h2 class="text-center py-4">Login</h2>

<%= form_tag '/login' do %>
<div class="col-md-6 offset-md-3">
  <form >
  	<div class="form-group">
    <%= text_field_tag :email, '', placeholder:"Enter your email", class: 'form-control' %>
</div>
    <div class="form-group">
    <%= password_field_tag :password, '', placeholder:"Password", class: 'form-control' %>
    
</div>
<p>These fields are case-sensitive</p>
    <div class="form-group">
    <%= submit_tag "Submit", class:"btn btn-primary" %>
</div>
    
  </form>
</div>
<% end %>
