<h2 class="text-center py-4">Login</h2>

<%= form_tag '/login' do %>
<div class="col-md-6 offset-md-3">
  <form >
  	<div class="form-group">
    <%= text_field_tag :email, '', placeholder:"Email Address", class: 'form-control' %>
</div>
    <div class="form-group">
    <%= password_field_tag :password, '', placeholder:"Password", class: 'form-control' %>

</div>
<p class="text-center">These fields are case-sensitive</p>
    <div class="text-center">
    <%= submit_tag "Submit", class:"btn btn-primary" %>
</div>

  </form>
</div>
<% end %>
