<h2 class="text-center py-4">Login</h2>

<%= form_tag '/login' do %>
<div class="col-md-6 offset-md-3">
  <form >
  	<div class="form-group">
    Email: <%= text_field_tag :email, '', class: 'form-control' %>
    <p>These fields are case-sensitive</p>
</div>
    <div class="form-group">
    Password: <%= password_field_tag :password, '', class: 'form-control' %>
    <p>These fields are case-sensitive</p>
</div>
    <div class="form-group">
    <%= submit_tag class: "btn btn-primary", "Submit" %>
</div>
    
  </form>
</div>
<% end %>
