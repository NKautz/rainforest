
<p id="notice" class="my-4"><%= notice %></p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<div class="row">
<div class="col-md-6">
  <div><%= image_tag @product.image, size: 200 %></div>
</div>
<div class="col-md-6">
  <div class="title">
  <h1><%= @product.name %></h1>
</div>
  <p>
  <strong>Price:</strong>
  $ <%= @product.formatted_price %>
</p>
<!-- tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="desciption" aria-selected="true">Description</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="new-review-tab" data-toggle="tab" href="#new-review" role="tab" aria-controls="new-review" aria-selected="false">Create Review</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
    <div class="product-description">
<h4 class="description-title">Description</h4>
<p>
  <%= @product.description %>
</p>
</div>
  </div>
  <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
    <h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= review.created_at %>
  </p>
<% end %>
  </div>
  <div class="tab-pane fade" id="new-review" role="tabpanel" aria-labelledby="new-review-tab">
    <h3>Create a new review</h3>
<%= render 'reviews/form' %>
  </div>
</div>
<!-- end tabs -->
</div>
</div>
