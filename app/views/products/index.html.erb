<div class="text-center">
  <h1>Product List</h1>
</div>


<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-4">

    <div class="card">
      <div class="card-body">
        <%= image_tag product.image, :size => "100%", :crop => :fill %>
        <h4 class="card-title"><%= product.name %></h4>
        <p class="card-text"><%= product.description %></p>
        <p class="card-text"><strong>$ <%= product.formatted_price %></strong></p>
        <button class="btn btn-primary"><%= link_to 'View', product %></button>
        <div class="admin">
          <button type="button" class="btn btn-warning">
            <%= link_to 'Edit', edit_product_path(product) %>
          </button>
          <button type="button" class="btn btn-danger">
            <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </button>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="new-product">
  <button type="button" class="btn btn-success"><%= link_to 'New Product', new_product_path %></button>
</div>
